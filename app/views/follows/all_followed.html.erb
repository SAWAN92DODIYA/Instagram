<h1><strong>Followed: <%= @followed_users.count %></strong></h1>
<h1><%= @user.profile_name %>'s Followers</h1>

<ul>
    <% @followed_users.each do |followed| %>
        <li>
            <div class="profile-container">
                <div id="profile_pic">
                    <% if followed.profile_pic.attached? %>
                        <%= image_tag followed.profile_pic, class: "profile-pic" %>
                    <% else %>
                        <img src="default_profile_pic.png" class="profile-pic" alt="Default Profile Picture">
                    <% end %>
                </div>
                <h1 id="profile_name"><%= followed.profile_name %></h1>
            </div>
        </li>
    <% end %>
</ul>
